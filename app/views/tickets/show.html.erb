<div id="ticket">
    <header>
        <h1><%= @project.name %></h1>
    </header>

    <table id="attributes">
        <tr>
            <th>Author: </th>
            <td> <%= @ticket.author.email %> </td>
        </tr>
        <tr>
            <th> Created: </th>
            <td> <%= time_ago_in_words(@ticket.created_at) %> ago</td>
        </tr>
    </table>

    <header>
        <h2><%= @ticket.name %></h2>
        <%= link_to "Edit Ticket", edit_project_ticket_path(@project,@ticket), class: "edit" %>
        <%= link_to "Delete Ticket", project_ticket_path(@project,@ticket), method: :delete, data: {confirm: "You sure??"}, class: "delete" %>
        <%= link_to "Go back", projects_path, class: "back" %>
    </header>

    <%= simple_format(@ticket.description)%>
</div>

